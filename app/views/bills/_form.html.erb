<%= form_with(model: bill, class: "contents") do |form| %>
  <% if bill.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul class="list-disc ml-6">
        <% bill.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bill.errors[:name].none?, "border-red-400 focus:outline-red-600": bill.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bill.errors[:address].none?, "border-red-400 focus:outline-red-600": bill.errors[:address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :npa %>
    <%= form.text_field :npa, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bill.errors[:npa].none?, "border-red-400 focus:outline-red-600": bill.errors[:npa].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :city %>
    <%= form.text_field :city, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bill.errors[:city].none?, "border-red-400 focus:outline-red-600": bill.errors[:city].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bill.errors[:email].none?, "border-red-400 focus:outline-red-600": bill.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bill.errors[:phone].none?, "border-red-400 focus:outline-red-600": bill.errors[:phone].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :iban %>
    <%= form.text_field :iban, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bill.errors[:iban].none?, "border-red-400 focus:outline-red-600": bill.errors[:iban].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
